
<% if gym_comment.favorited_by?(current_user) %>
<%= link_to gym_gym_comment_favorites_path(gym,gym_comment,favorite),data: {"turbolinks" => false}, method: :delete,  remote: true do %>
<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
<%= gym_comment.favorites.count %>いいね
<% end %>

<% else %>
<%= link_to gym_gym_comment_favorites_path(gym,gym_comment), data: {"turbolinks" => false}, method: :post, remote: true  do %>
<i class="fa fa-heart-o" aria-hidden="true" style="color: red;"></i>
<%= gym_comment.favorites.count %>いいね
<% end %>
<% end %>